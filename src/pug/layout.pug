doctype html
html
  head
    title 數據中興
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='author', content='Sakamoto, HONG-WEN')
    link(rel='shortcut icon' type='image/x-icon' href='./img/icon.png')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css')
    link(rel='stylesheet', href='/styles/main.css')
    block style
    block link
      -var selected = 'index'
    -var menu = { 'index': '資料視覺化', 'source': '資料來源', 'aboutus': '關於我們' }
  body
    nav.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/index.html') 數據中興
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right
            each val, key in menu
                if selected === key
                  li.active
                    a(href=('/'+key+'.html'))= val
                else
                  li
                    a(href=('/'+key+'.html'))= val
    block content
    
    script(src='/js/libs/jquery-2.2.4.min.js')
    script(src='/js/libs/lodash.min.js')
    script(src='/js/libs/highcharts.js')
    script(src='/js/libs/exporting.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/vue/2.2.6/vue.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js')
    block js
